pipeline {
    agent any
    
    environment {
        AWS_DEFAULT_REGION = 'us-east-1'  // Replace with your desired AWS region
    }
    
    stages {
        stage('Initialize') {
            steps {
                git branch: 'main', url: 'https://github.com/Beknazar007/Jenkins-Installation.git'
            }
        }
        
        stage('Plan') {
            withCredentials([<object of type com.cloudbees.jenkins.plugins.awscredentials.AmazonWebServicesCredentialsBinding>]) {
    sh 'terraform plan -out=tfplan'
}
            steps {
                sh 'terraform plan -out=tfplan'
            }
        }
        
        stage('Deploy') {
            steps {
                sh 'terraform apply tfplan'
            }
        }
    }
    
    post {
        always {
            sh 'terraform destroy -auto-approve' // Clean up resources after the pipeline
        }
    }
}
